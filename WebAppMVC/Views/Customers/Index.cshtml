@model List<WebAppMVC.Models.Customer>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>
@Html.ActionLink("Add Customer", "New", "Customers", new { @class = "btn btn-primary" })
<table class="table table-striped table-hover table-bordered">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Membership Type</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cust in Model)
        {
            <tr>
                <td>@Html.ActionLink(cust.name, "Edit", "Customers", new { id = cust.id }, null)</td>
                <td>@cust.MembershipType.Name</td>
            </tr>
        }
    </tbody>
</table>

