@model List<WebAppMVC.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@Html.ActionLink("Add Movie","New","Movies",new {@class = "btn btn-primary" })
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Movie</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var mov in Model)
        {
            <tr>
                <td>@Html.ActionLink(mov.name, "Edit", "Movies", new { id = mov.id },null)</td>
                <td>@mov.genre.name</td>
            </tr>
        }
    </tbody>
</table>

